{
  "compilerOptions": {
    "rootDir": "",
    "baseUrl": "src",
    "paths": {
      "~dtos/*": ["application/dtos/*"],
      "~use-case-interfaces/*": ["application/use-case-interfaces/*"],
      "~mappers/*": ["application/mappers/*"],
      "~use-cases/*": ["application/use-cases/*"],

      "~entities/*": ["domain/entities/*"],
      "~repository-interfaces/*": ["domain/repositories/*"],
      "~service-interfaces/*": ["domain/services/*"],

      "~models/*": ["infrastructure/databases/mongo/models/*"],
      "~connect-db/*": ["infrastructure/databases/mongo/*"],
      "~logger/*": ["infrastructure/logger/*"],
      "~concrete-repositories/*": ["infrastructure/repositories/*"],
      "~strategies/*": ["infrastructure/strategies/*"],

      "~controllers/*": ["presentation/controllers/*"],
      "~routes/*": ["presentation/routes/*"],

      "~config/*": ["config/*"],
      "~middlewares/*": ["middlewares/*"],
      "~concrete-services/*": ["services/*"],
      "~constants/*": ["shared/constants/*"],
      "~errors/*": ["shared/errors/*"],

      "~/*": ["*"]
    },

    "module": "nodenext",
    "target": "esnext",
    "types": ["node"],
    "sourceMap": true,
    "declaration": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "noEmit": true
  },

  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"]
}
